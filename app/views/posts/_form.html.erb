<%= form_for(@post) do |f| %>
<%= f.label :title %> <br>
<%= f.text_field :title %> <br> <br>
<%= f.label :description %> <br>
<%= f.text_area :description %> <br><br>
<%= f.label :category %> <br>
<%= f.collection_radio_buttons :category_id, Category.all, :id, :name %> <br><br>
<%= f.label 'Published?' %> <br>
<%= f.check_box :post_status %> <br><br>
<%= f.submit %>

<% end %>

